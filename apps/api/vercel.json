{
  "version": 2,
  "installCommand": "npm install",
  "buildCommand": "npm run build || echo Skipping build for serverless functions",
  "functions": {
    "api/**.ts": {
      "includeFiles": "node_modules/.prisma/**"
    }
  },
  "routes": [
    { "src": "^/api/.*$", "dest": "/api/[...all].ts" },
    { "src": "^/health$", "dest": "/api/[...all].ts" }
  ]
}
