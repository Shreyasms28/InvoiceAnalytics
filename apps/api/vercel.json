{
  "version": 2,
  "builds": [
    { "src": "api/**.ts", "use": "@vercel/node" }
  ],
  "functions": {
    "api/**.ts": {
      "includeFiles": [
        "node_modules/.prisma/**",
        "prisma/schema.prisma"
      ]
    }
  },
  "routes": [
    { "src": "^/api/health$", "dest": "/api/health.ts" },
    { "src": "^/api/.*$", "dest": "/api/[...all].ts" },
    { "src": "^/health$", "dest": "/api/[...all].ts" }
  ]
}
